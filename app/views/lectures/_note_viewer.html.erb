<ul>
  <%= simple_form_for @new_note, :method=>"get", remote: true, :url=>notes_create_path,:html => { :class => 'form-horizontal' } do |f| %>
  <!--%= f.input :name %-->
  <%= f.input :lecture_id, :as => :hidden, :input_html => { :value => @lecture.id } %>
  <!--%= f.association :lecture %-->
  <%= f.input :name %>
  <%= f.input :text %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                notes_create_path, :class => 'btn' %>
  </div>
<% end %>
  <% media.each do |note| %>
  <li class='note_<%= note.id%>'>
    <div class='note_name'>
      <%= note.name %>
    </div>
    <%= form_for note, remote: true, url: {controller: "notes", action: "update"}, method: "get", html: { :class => 'form-horizontal' } do |f| %>
    <%= hidden_field_tag :id, note.id %>
    <%= f.text_field :text, :value=>note.text %>
    <!--%=f.submit %-->
    <% end %>
  </li>
  <% end %>
</ul>
