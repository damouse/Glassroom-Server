<li class='note_<%= @note_most_recent.id%>'>
    <div class='note_name'>
      <%= @note_most_recent.name %>
    </div>
    <%= form_for @note_most_recent, remote: true, url: {controller: "notes", action: "update"}, method: "get", html: { :class => 'form-horizontal' } do |f| %>
    <%= hidden_field_tag :id, @note_most_recent.id %>
    <%= f.text_field :text, :value=>@note_most_recent.text %>
    <!--%=f.submit %-->
    <% end %>
  </li>