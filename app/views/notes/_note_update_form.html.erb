<li class='note_<%= note.id%>'>
    <div class='note_name'>
      <%= note.name %>
    </div>
    <%= form_for note, remote: true, url: {controller: "notes", action: "update"}, method: "get", html: { :class => 'form-horizontal' } do |f| %>
    <%= hidden_field_tag :id, note.id %>
    <%= f.text_field :text, :value=>note.text %>
    <!--%=f.submit %-->
    <% end %>
  </li>